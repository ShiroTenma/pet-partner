# Default: normalize text files
* text=auto

# --- Force LF for source code & configs ---
*.kt      text eol=lf
*.kts     text eol=lf
*.java    text eol=lf
*.gradle  text eol=lf
*.gradle.kts text eol=lf
*.properties text eol=lf
*.xml     text eol=lf
*.md      text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf
*.json    text eol=lf
*.pro     text eol=lf
*.proguard text eol=lf
*.sh      text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf

# --- Windows scripts can keep CRLF if you like ---
*.bat     text eol=crlf
*.cmd     text eol=crlf

# --- Treat binaries as binary (no line ending changes) ---
*.png   binary
*.jpg   binary
*.jpeg  binary
*.webp  binary
*.gif   binary
*.ico   binary
*.pdf   binary
*.jar   binary
*.aab   binary
*.apk   binary
*.keystore binary
*.jks     binary

# --- Gradle wrapper (text; uses LF on repo) ---
gradlew        text eol=lf
gradlew.bat    text eol=crlf
